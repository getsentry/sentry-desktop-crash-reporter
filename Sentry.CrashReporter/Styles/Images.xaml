<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <ImageSource x:Key="SentryGlyphIcon">ms-appx:///Assets/SentryGlyph.light.png</ImageSource>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <ImageSource x:Key="SentryGlyphIcon">ms-appx:///Assets/SentryGlyph.dark.png</ImageSource>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
